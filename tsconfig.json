{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "inlineSources": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "keyofStringsOnly": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "include": [
    "src/index.ts"
  ]
}
